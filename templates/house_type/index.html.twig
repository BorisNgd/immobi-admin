{% extends 'base.html.twig' %}

{% block title %}Student index{% endblock %}

{% block body %}

    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">{{ wo_render_breadcrumbs() }}</h1>

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <a id="editModal" data-toggle="modal" data-target="#modalStudent" class=" btn btn-primary mr-3"
                   href="{{ path('house_type_new') }}">Cr√©er une categorie</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered"  id="dataTable" width="100%" cellspacing="0">
                        <thead>
                        <tr>
                            <th>Categorie N</th>
                            <th>Nom Categorie</th>
                            <th class="text-center" colspan="3">Actions</th>
                        </tr>
                        </thead>
                        <tfoot>
                        <tr>
                            <th>Categorie N</th>
                            <th>Nom Categorie</th>
                            <th colspan="3" class="text-center">Actions</th>
                        </tr>
                        </tfoot>
                        <tbody>
                        {% for category in house_types %}
                            <tr>
                                <td>{{ category.id }}</td>
                                <td>{{ category.name }}</td>
                                <td class="text-center">
                                    <a class="btn btn-info" href="{{ path('house_type_show', {'id': category.id} ) }}">
                                        <i class="fa fa-eye" aria-hidden="true"></i>
                                    </a>
                                    <a class="btn btn-secondary" href="{{ path('house_type_edit', {'id': category.id}) }}">
                                        <i class="fa fa-edit" aria-hidden="true"></i>
                                    </a>
                                    <a class="btn btn-danger" href="" id="printCard" data-toggle="modal"
                                       data-target="#modalCard">
                                        <i class="fa fa-trash" aria-hidden="true"></i>
                                    </a>
                                </td>
                            </tr>

                        {% else %}
                            <tr>
                                <td colspan="10">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- /.container-fluid -->
{% endblock %}

{% block customScripts %}
{{ encore_entry_script_tags('map') }}
{% endblock %}
