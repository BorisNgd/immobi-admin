{{ form_start(form) }}

<div class="card-body">

    <div class="row">
        <div class="col-md-12">
            <div class="card shadow mb-4">
                <div class="card-body">
                    <div class="card-header text-left bg-transparent">
                        <h6>CATEGORY UPDATE FORM</h6>
                    </div>

                    <div class="row justify-content-center text-center">
                        <div class="col-md-12 m-2">
                            <div class="col-md-12 m-2">
                                <div class="col-md-12 mr-4">
                                    <div class="col-md-12  text-center form-group">
                                        {{ form_label(form.name) }}
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="basic-addon1"><i class="fa fa-user"></i></span>
                                            </div>
                                            {{ form_widget(form.name , {'attr':{'class':''}}) }}
                                        </div>
                                        <small>{{ form_help(form.name) }}</small>

                                        <div class="form-error">
                                            {{ form_errors(form.name) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row text-center">
                        <div class="col-md">
                            {{ form_widget(form) }}
                            <button class="btn btn-primary"><i class="fa fa-save"></i> &nbsp; {{ button_label|default(' Save') }}</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>

</div>
{{ form_end(form) }}
