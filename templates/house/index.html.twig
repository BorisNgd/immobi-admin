{% extends 'base.html.twig' %}

{% block title %}Student index{% endblock %}

{% block body %}

    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">{{ wo_render_breadcrumbs() }}</h1>

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <a class=" btn btn-primary mr-3" href="{{ path('house_new') }}">Create new House</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Picture</th>
                            <th>Title</th>
                            <th>Reference</th>
                            <th>Price</th>
                            <th>Status</th>
                            <th>Promote</th>
                            <th class="text-center" colspan="3">Actions</th>
                        </tr>
                        </thead>
                        <tfoot>
                        <tr>
                            <th>Id</th>
                            <th>Picture</th>
                            <th>Title</th>
                            <th>Reference</th>
                            <th>Price</th>
                            <th>Status</th>
                            <th>Promote</th>
                            <th colspan="3" class="text-center">Actions</th>
                        </tr>
                        </tfoot>
                        <tbody>
                        {% for house in houses %}
                            <tr>
                                <td>{{ house.id }}</td>
                                <td><img src="{{ vich_uploader_asset(house) }}" width="50" height="50"></td>
                                <td>{{ house.title|length > 20 ? house.title|slice(0,20) ~ '...' : house.title }}</td>
                                <td>{{ house.reference }}</td>
                                <td>{{ house.price }}</td>
                                <td> {{ house.status ? 'Busy' : 'Online' }}</td>
                                <td>{{ house.promote ? '<input type="checkbox" class="house_promote" checked>' : '<input type="checkbox" class="house_promote">' }}</td>
                                <td class="text-center">
                                    <a class="btn btn-info" href="{{ path('house_show', {'id': house.id} ) }}">
                                        <i class="fa fa-eye" aria-hidden="true"></i>
                                    </a>
                                    <a class="btn btn-secondary" href="{{ path('house_edit', {'id': house.id}) }}">
                                        <i class="fa fa-edit" aria-hidden="true"></i>
                                    </a>
                                        <form method="post" action="{{ path('house_delete' , {id:house.id}) }}"
                                              onsubmit="return confirm('Are you sure you want to delete this item ?')">
                                            <input type="hidden" name="_token"
                                                   value="{{ csrf_token('delete' ~ house.id) }}">
                                            <button class="btn btn-danger"><i class="fa fa-trash"></i></button>
                                        </form>

                                </td>
                            </tr>

                        {% else %}
                            <tr>
                                <td colspan="10">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- /.container-fluid -->
{% endblock %}

{% block customScripts %}
    {{ encore_entry_script_tags('customForm') }}
{% endblock %}
